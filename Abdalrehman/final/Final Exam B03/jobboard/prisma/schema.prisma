// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model job {
  id           Int           @id
  title        String
  company      String
  location     String
  type         String
  salary       String
  description  String
  isActive     Boolean
  applications application[]
}

model application {
  id     Int    @id @default(autoincrement())
  jobId  Int
  name   String
  email  String
  resume String

  job job @relation(fields: [jobId], references: [id])
}
